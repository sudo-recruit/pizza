{
  "builders": [
    {
      "ami_description": "Built with Pizza project at {{ timestamp }}",
      "ami_name": "pizza-{{ timestamp }}",
      "associate_public_ip_address": true,
      "instance_type": "m4.large",
      "region": "ap-northeast-1",
      "security_group_id": "{{ user `security_group_id` }}",
      "source_ami": "{{ user `base_ami` }}",
      "spot_price": "0.5",
      "ssh_username": "ubuntu",
      "type": "amazon-ebs"
    }
  ],
  "provisioners": [
    {
      "cookbook_paths": [
        "vendor"
      ],
      "json": {
        "pizza": {
          "compile_assets": false,
          "consul": {
            "key_dir": "{{ user `consul_key_dir` }}"
          },
          "database_url": "{{ user `database_url` }}",
          "deploy_to": "{{ user `deploy_to` }}",
          "repository": "{{ user `repository` }}",
          "secret_key_base": "{{ user `secret_key_base` }}",
          "ssh_key": "{{ user `ssh_key` }}",
          "username": "{{ user `username` }}"
        }
      },
      "run_list": "pizza::default-without-app",
      "type": "chef-solo"
    },
    {
      "destination": "{{ user `deploy_to` }}/public/assets",
      "source": "../public/assets/",
      "type": "file"
    }
  ]
}